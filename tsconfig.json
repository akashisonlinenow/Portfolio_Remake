{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./*"],
      "@styles/*": ["./common/styles/*"],
      "@components/*": ["./common/components/*/index"],
      "@constants/*": ["./common/constants/*"],
      "@context/*": ["./common/context/*"],
      "@hooks/*": ["./common/hooks/*"],
      "@layout/*": ["./common/layout/*"],
      "@modules/*": ["./modules/*"],
      "@data/*": ["./data/*"],
      "@test/*": ["./test/*"],
      "@types/*": ["./types/*"],
      "@store/*": ["./store/*"],
      "@animate/*": ["./common/animation/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "temp/temp_fix.js",
    "test/temp.tsx",
    "pdf-worker.js",
    "global.d.ts"
  ],
  "exclude": ["node_modules"]
}
